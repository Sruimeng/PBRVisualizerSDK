{
  "id": "product-showcase",
  "name": "产品展示",
  "description": "专业的产品展示场景，明亮专业，适合电商产品拍摄",
  "environment": {
    "url": "/demo/hdr/env.hdr",
    "intensity": 1.2,
    "studio": true
  },
  "camera": {
    "position": {
      "x": 0,
      "y": 1.2,
      "z": 3.5
    },
    "target": {
      "x": 0,
      "y": 0.5,
      "z": 0
    },
    "fov": 45,
    "near": 0.1,
    "far": 1000,
    "controls": {
      "enabled": true,
      "autoRotate": true,
      "autoRotateSpeed": 2.0
    }
  },
  "postProcessing": {
    "enabled": true,
    "bloom": {
      "enabled": true,
      "strength": 0.3,
      "radius": 0.3,
      "threshold": 0.85
    },
    "ssao": {
      "enabled": false,
      "kernelRadius": 4,
      "minDistance": 0.005,
      "maxDistance": 0.1
    },
    "toneMapping": {
      "type": "ACESFilmicToneMapping",
      "exposure": 1.0,
      "whitePoint": 1.0
    },
    "antialiasing": {
      "type": "fxaa",
      "enabled": true
    }
  },
  "vignette": {
    "enabled": true,
    "color1": "#e8e8e8",
    "color2": "#f5f5f5",
    "smoothness": 0.25,
    "brightness": 0.15,
    "radiusScale": 1.3
  },
  "defaultMaterial": {
    "color": "#ffffff",
    "metalness": 0.3,
    "roughness": 0.3,
    "envMapIntensity": 1.2,
    "aoMapIntensity": 1.0
  },
  "tags": ["product", "commercial", "bright", "professional"]
}
