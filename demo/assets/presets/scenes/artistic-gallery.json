{
  "id": "artistic-gallery",
  "name": "艺术画廊",
  "description": "戏剧化的艺术画廊风格，高Bloom效果和对比的灯光营造艺术氛围",
  "environment": {
    "url": "/demo/hdr/env.hdr",
    "intensity": 0.7,
    "studio": false
  },
  "camera": {
    "position": {
      "x": 2.0,
      "y": 1.5,
      "z": 2.5
    },
    "target": {
      "x": 0,
      "y": 0.5,
      "z": 0
    },
    "fov": 45,
    "near": 0.1,
    "far": 1000,
    "controls": {
      "enabled": true,
      "autoRotate": true,
      "autoRotateSpeed": 1.2
    }
  },
  "postProcessing": {
    "enabled": true,
    "bloom": {
      "enabled": true,
      "strength": 1.2,
      "radius": 0.8,
      "threshold": 0.4
    },
    "ssao": {
      "enabled": true,
      "kernelRadius": 7,
      "minDistance": 0.01,
      "maxDistance": 0.25
    },
    "toneMapping": {
      "type": "ACESFilmicToneMapping",
      "exposure": 0.85,
      "whitePoint": 1.0
    },
    "antialiasing": {
      "type": "fxaa",
      "enabled": true
    }
  },
  "vignette": {
    "enabled": true,
    "color1": "#0d0221",
    "color2": "#3a0ca3",
    "smoothness": 0.15,
    "brightness": 0.05,
    "radiusScale": 1.6
  },
  "defaultMaterial": {
    "color": "#7209b7",
    "metalness": 0.5,
    "roughness": 0.4,
    "envMapIntensity": 0.6,
    "aoMapIntensity": 1.3
  },
  "tags": ["artistic", "gallery", "dramatic", "high-bloom", "atmospheric"]
}
